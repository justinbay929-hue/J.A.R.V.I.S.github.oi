    <script>
    // Configuration
    const CONFIG = {
        WEATHER_API_KEY: 'f7cc7d70fd2cd0515732accca201f778', // Free OpenWeather API key
        NEWS_API_KEY: 'pub_4260581e5813c05e5a56dd7aee1600aec3019', // NewsData.io free key
        CRYPTO_API: 'https://api.coingecko.com/api/v3',
        EXCHANGE_API: 'https://api.exchangerate-api.com/v4/latest/USD',
        IP_API: 'https://ipapi.co/json/'
    };

    // DOM Elements
    const chatDisplay = document.getElementById("chatDisplay");
    const micBtn = document.getElementById("micBtn");
    const clearBtn = document.getElementById("clearBtn");
    const statusIndicator = document.getElementById("statusIndicator");
    const statusText = document.getElementById("statusText");
    const micText = document.querySelector(".mic-text");
    const micIcon = document.querySelector(".mic-icon");

    // Speech Recognition
    let recognition;
    let isListening = false;
    const WAKE_WORD = "jarvis";

    // Initialize speech recognition
    function initSpeechRecognition() {
        if ("webkitSpeechRecognition" in window) {
            recognition = new webkitSpeechRecognition();
            recognition.lang = "en-US";
            recognition.continuous = false;
            recognition.interimResults = false;
            recognition.maxAlternatives = 1;

            recognition.onstart = () => {
                statusIndicator.classList.add("status-listening");
            };

            recognition.onresult = async (e) => {
                const transcript = e.results[0][0].transcript.toLowerCase().trim();
                addMessage(transcript, "user");

                if (!transcript.includes(WAKE_WORD)) {
                    jarvisReply("Please say 'Jarvis' first.");
                    stopListening();
                    return;
                }

                const cleanCommand = transcript.replace(WAKE_WORD, "").trim();
                await handleCommand(cleanCommand);
                stopListening();
            };

            recognition.onerror = (e) => {
                console.error("Speech error:", e.error);
                jarvisReply("Audio error. Please try again.");
                stopListening();
            };

            recognition.onend = () => {
                statusIndicator.classList.remove("status-listening");
            };
        } else {
            micBtn.disabled = true;
            micText.textContent = "Not Supported";
            jarvisReply("Speech recognition not supported.");
        }
    }

    // Initialize on load
    document.addEventListener('DOMContentLoaded', initSpeechRecognition);

    // UI Functions
    function addMessage(text, sender) {
        const div = document.createElement("div");
        div.className = "jarvis-message";
        if (sender === "user") div.classList.add("user-message");
        div.textContent = text;
        chatDisplay.appendChild(div);
        chatDisplay.scrollTop = chatDisplay.scrollHeight;
    }

    function addDataCard(title, content) {
        const card = document.createElement("div");
        card.className = "data-card";
        card.innerHTML = `
            <h4>${title}</h4>
            <div>${content}</div>
        `;
        chatDisplay.appendChild(card);
        chatDisplay.scrollTop = chatDisplay.scrollHeight;
    }

    function jarvisReply(text) {
        addMessage(text, "jarvis");
        speak(text);
    }

    function showLoading(text = "Fetching live data...") {
        statusIndicator.classList.add("status-fetching");
        statusText.textContent = text;
    }

    function hideLoading() {
        statusIndicator.classList.remove("status-fetching");
        statusText.textContent = "Ready";
    }

    // API Functions
    async function fetchWeather(city = "London") {
        showLoading("Getting weather...");
        try {
            const response = await fetch(
                `https://api.openweathermap.org/data/2.5/weather?q=${city}&units=metric&appid=${CONFIG.WEATHER_API_KEY}`
            );
            const data = await response.json();
            
            if (data.cod === 200) {
                const weather = {
                    city: data.name,
                    country: data.sys.country,
                    temp: Math.round(data.main.temp),
                    feels_like: Math.round(data.main.feels_like),
                    humidity: data.main.humidity,
                    description: data.weather[0].description,
                    wind: Math.round(data.wind.speed * 3.6), // Convert to km/h
                    icon: data.weather[0].icon
                };
                
                const content = `
                    <div class="data-row">
                        <span class="data-label">Temperature:</span>
                        <span class="data-value">${weather.temp}¬∞C</span>
                    </div>
                    <div class="data-row">
                        <span class="data-label">Feels Like:</span>
                        <span class="data-value">${weather.feels_like}¬∞C</span>
                    </div>
                    <div class="data-row">
                        <span class="data-label">Condition:</span>
                        <span class="data-value">${weather.description}</span>
                    </div>
                    <div class="data-row">
                        <span class="data-label">Humidity:</span>
                        <span class="data-value">${weather.humidity}%</span>
                    </div>
                    <div class="data-row">
                        <span class="data-label">Wind:</span>
                        <span class="data-value">${weather.wind} km/h</span>
                    </div>
                `;
                
                addDataCard(`Weather in ${weather.city}, ${weather.country}`, content);
                jarvisReply(`It's ${weather.temp} degrees in ${weather.city} with ${weather.description}.`);
            } else {
                jarvisReply(`Could not find weather for ${city}. Try another city.`);
            }
        } catch (error) {
            console.error("Weather error:", error);
            jarvisReply("Weather service is currently unavailable.");
        }
        hideLoading();
    }

    async function fetchCryptoPrice(coin = "bitcoin") {
        showLoading("Getting crypto prices...");
        try {
            const response = await fetch(
                `${CONFIG.CRYPTO_API}/simple/price?ids=${coin}&vs_currencies=usd&include_24hr_change=true`
            );
            const data = await response.json();
            
            if (data[coin]) {
                const price = data[coin].usd;
                const change = data[coin].usd_24h_change;
                const changeClass = change >= 0 ? "positive" : "negative";
                const changeIcon = change >= 0 ? "üìà" : "üìâ";
                
                const content = `
                    <div class="data-row">
                        <span class="data-label">Current Price:</span>
                        <span class="data-value">$${price.toLocaleString()}</span>
                    </div>
                    <div class="data-row">
                        <span class="data-label">24h Change:</span>
                        <span class="data-value ${changeClass}">${changeIcon} ${change.toFixed(2)}%</span>
                    </div>
                `;
                
                const coinName = coin.charAt(0).toUpperCase() + coin.slice(1);
                addDataCard(`${coinName} Price`, content);
                jarvisReply(`${coinName} is at $${price.toLocaleString()}, ${change >= 0 ? 'up' : 'down'} ${Math.abs(change).toFixed(2)}% in 24 hours.`);
            }
        } catch (error) {
            console.error("Crypto error:", error);
            jarvisReply("Crypto data is currently unavailable.");
        }
        hideLoading();
    }

    async function fetchNews(topic = "technology") {
        showLoading("Getting latest news...");
        try {
            const response = await fetch(
                `https://newsdata.io/api/1/news?apikey=${CONFIG.NEWS_API_KEY}&q=${topic}&language=en`
            );
            const data = await response.json();
            
            if (data.results && data.results.length > 0) {
                const articles = data.results.slice(0, 3); // Show top 3
                let content = '';
                
                articles.forEach((article, index) => {
                    content += `
                        <div style="margin-bottom: 15px; padding-bottom: 10px; border-bottom: 1px solid rgba(255,255,255,0.1);">
                            <div style="font-weight: 600; margin-bottom: 5px;">${article.title}</div>
                            <div style="font-size: 0.85rem; color: #88ffff;">${article.source_id} ‚Ä¢ ${new Date(article.pubDate).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</div>
                        </div>
                    `;
                });
                
                addDataCard(`Latest ${topic} News`, content);
                jarvisReply(`Here are the latest ${topic} headlines.`);
            }
        } catch (error) {
            console.error("News error:", error);
            jarvisReply("News service is currently unavailable.");
        }
        hideLoading();
    }

    async function fetchExchangeRates() {
        showLoading("Getting exchange rates...");
        try {
            const response = await fetch(CONFIG.EXCHANGE_API);
            const data = await response.json();
            
            const currencies = ['EUR', 'GBP', 'JPY', 'CAD', 'AUD'];
            let content = '';
            
            currencies.forEach(currency => {
                if (data.rates[currency]) {
                    const rate = data.rates[currency];
                    content += `
                        <div class="data-row">
                            <span class="data-label">USD to ${currency}:</span>
                            <span class="data-value">${rate.toFixed(4)}</span>
                        </div>
                    `;
                }
            });
            
            addDataCard("Currency Exchange Rates", content);
            jarvisReply("Current exchange rates displayed.");
        } catch (error) {
            console.error("Exchange error:", error);
            jarvisReply("Exchange rate service unavailable.");
        }
        hideLoading();
    }

    async function fetchIPInfo() {
        showLoading("Getting network info...");
        try {
            const response = await fetch(CONFIG.IP_API);
            const data = await response.json();
            
            const content = `
                <div class="data-row">
                    <span class="data-label">IP Address:</span>
                    <span class="data-value">${data.ip}</span>
                </div>
                <div class="data-row">
                    <span class="data-label">Location:</span>
                    <span class="data-value">${data.city}, ${data.region}, ${data.country_name}</span>
                </div>
                <div class="data-row">
                    <span class="data-label">ISP:</span>
                    <span class="data-value">${data.org}</span>
                </div>
            `;
            
            addDataCard("Your Network Information", content);
            jarvisReply("Your network information is displayed.");
        } catch (error) {
            console.error("IP error:", error);
            jarvisReply("Could not fetch network information.");
        }
        hideLoading();
    }

    async function fetchISSLocation() {
        showLoading("Tracking ISS...");
        try {
            const response = await fetch('http://api.open-notify.org/iss-now.json');
            const data = await response.json();
            
            if (data.iss_position) {
                const content = `
                    <div class="data-row">
                        <span class="data-label">Latitude:</span>
                        <span class="data-value">${data.iss_position.latitude}</span>
                    </div>
                    <div class="data-row">
                        <span class="data-label">Longitude:</span>
                        <span class="data-value">${data.iss_position.longitude}</span>
                    </div>
                    <div style="margin-top: 10px; font-size: 0.85rem; color: #88ffff;">
                        Last updated: ${new Date(data.timestamp * 1000).toLocaleTimeString()}
                    </div>
                `;
                
                addDataCard("International Space Station Location", content);
                jarvisReply("The ISS is currently above these coordinates.");
            }
        } catch (error) {
            console.error("ISS error:", error);
            jarvisReply("Space station data unavailable.");
        }
        hideLoading();
    }

    async function fetchStockPrice(symbol = "AAPL") {
        showLoading("Getting stock data...");
        try {
            // Using Alpha Vantage demo API (free tier)
            const response = await fetch(
                `https://www.alphavantage.co/query?function=GLOBAL_QUOTE&symbol=${symbol}&apikey=demo`
            );
            const data = await response.json();
            
            if (data['Global Quote']) {
                const quote = data['Global Quote'];
                const price = parseFloat(quote['05. price']);
                const change = parseFloat(quote['09. change']);
                const changePercent = quote['10. change percent'];
                
                const content = `
                    <div class="data-row">
                        <span class="data-label">Current Price:</span>
                        <span class="data-value">$${price.toFixed(2)}</span>
                    </div>
                    <div class="data-row">
                        <span class="data-label">Change:</span>
                        <span class="data-value ${change >= 0 ? 'positive' : 'negative'}">
                            ${change >= 0 ? 'üìà' : 'üìâ'} $${Math.abs(change).toFixed(2)} (${changePercent})
                        </span>
                    </div>
                `;
                
                addDataCard(`${symbol.toUpperCase()} Stock`, content);
                jarvisReply(`${symbol} is trading at $${price.toFixed(2)}.`);
            }
        } catch (error) {
            console.error("Stock error:", error);
            jarvisReply("Stock data service unavailable.");
        }
        hideLoading();
    }

    // Command Handler
    async function handleCommand(cmd) {
        if (!cmd) {
            jarvisReply("Yes? How can I assist you?");
            return;
        }

        const commands = {
            // Weather commands
            'weather': () => {
                const cityMatch = cmd.match(/weather\s+(?:in\s+)?([a-zA-Z\s]+)/i);
                const city = cityMatch ? cityMatch[1].trim() : 'London';
                fetchWeather(city);
            },
            
            // Crypto commands
            'bitcoin': () => fetchCryptoPrice('bitcoin'),
            'ethereum': () => fetchCryptoPrice('ethereum'),
            'crypto': () => fetchCryptoPrice('bitcoin'),
            
            // News commands
            'news': () => {
                const topicMatch = cmd.match(/news\s+(.+)/i);
                const topic = topicMatch ? topicMatch[1].trim() : 'technology';
                fetchNews(topic);
            },
            
            // Stock commands
            'stock': () => {
                const symbolMatch = cmd.match(/stock\s+(\w+)/i);
                const symbol = symbolMatch ? symbolMatch[1].trim() : 'AAPL';
                fetchStockPrice(symbol);
            },
            
            // Exchange rates
            'exchange': () => fetchExchangeRates(),
            'currency': () => fetchExchangeRates(),
            
            // Network info
            'ip': () => fetchIPInfo(),
            'location': () => fetchIPInfo(),
            'network': () => fetchIPInfo(),
            
            // Space/Science
            'iss': () => fetchISSLocation(),
            'space': () => fetchISSLocation(),
            
            // Basic commands
            'time': () => jarvisReply(`The time is ${new Date().toLocaleTimeString()}`),
            'date': () => jarvisReply(`Today is ${new Date().toLocaleDateString([], {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})}`),
            'joke': () => {
                const jokes = [
                    "Why don't APIs ever get lonely? Because they're always making connections!",
                    "Why did the developer go broke? Because he used up all his cache!",
                    "How many programmers does it take to change a light bulb? None, it's a hardware issue!"
                ];
                jarvisReply(jokes[Math.floor(Math.random() * jokes.length)]);
            },
            'hello': () => jarvisReply("Hello! I can fetch live data for you. Try asking for weather or news."),
            'help': () => {
                const helpText = `
                I can fetch real-time information including:
                ‚Ä¢ Weather in any city
                ‚Ä¢ Cryptocurrency prices
                ‚Ä¢ Latest news
                ‚Ä¢ Stock prices
                ‚Ä¢ Exchange rates
                ‚Ä¢ Your network info
                ‚Ä¢ Space station location
                Just say "Jarvis" followed by your request!
                `;
                addMessage(helpText.trim(), "jarvis");
            }
        };

        // Find matching command
        let matched = false;
        for (const [key, action] of Object.entries(commands)) {
            if (cmd.includes(key)) {
                await action();
                matched = true;
                break;
            }
        }

        if (!matched) {
            jarvisReply(`I didn't understand "${cmd}". Try saying "Jarvis help" for available commands.`);
        }
    }

    // Text to Speech
    function speak(text) {
        if (!("speechSynthesis" in window)) return;
        
        speechSynthesis.cancel();
        const msg = new SpeechSynthesisUtterance(text);
        msg.rate = 1.0;
        msg.pitch = 1.0;
        msg.volume = 1.0;
        
        setTimeout(() => speechSynthesis.speak(msg), 50);
    }

    // Control Functions
    function startListening() {
        if (!recognition) return;
        
        isListening = true;
        micText.textContent = "Listening...";
        micIcon.textContent = "üî¥";
        micBtn.classList.add("listening");
        statusText.textContent = "Say 'Jarvis' + command";
        
        recognition.start();
    }

    function stopListening() {
        isListening = false;
        micText.textContent = "Tap to Speak";
        micIcon.textContent = "üé§";
        micBtn.classList.remove("listening");
        statusText.textContent = "Ready";
        statusIndicator.classList.remove("status-listening", "status-fetching");
    }

    // Event Listeners
    micBtn.addEventListener('click', (e) => {
        e.preventDefault();
        if (isListening) stopListening();
        else startListening();
    });

    clearBtn.addEventListener('click', () => {
        chatDisplay.innerHTML = '';
        jarvisReply("Chat cleared. What data would you like to fetch?");
    });

    // Toggle instructions
    document.getElementById('instructionsToggle').addEventListener('click', () => {
        const content = document.getElementById('instructionsContent');
        const icon = document.getElementById('toggleIcon');
        content.classList.toggle('active');
        icon.textContent = content.classList.contains('active') ? '‚ñ≤' : '‚ñº';
    });

    // Initial message
    setTimeout(() => {
        speak("Live data assistant ready. Ask me for weather, news, or cryptocurrency prices.");
    }, 1000);
    </script>
</body>
</html>
